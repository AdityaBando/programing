#include <iostream> 
using namespace std;
void main() {
	char c;

	//Expected variables 
	int galons, miles, milesPerGal;
	galons = 16;
	miles = 350;
	milesPerGal = miles / galons;

	cout << "A car can holds 16 galons of gasoline, and can travel 350 miles befor refuling.\n\n";
	cout << "The number of milles per galon are: " << milesPerGal << " miles per gallon.";

	cin >> c;
}
